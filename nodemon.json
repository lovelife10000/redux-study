{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "react-redux-template/webpack.config.js",
    "react-redux-template/webpack.config.base.js",
    "react-redux-template/webpack.config.dev.js",
    "react-redux-template/server.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json",
  "legacy-watch": true
}